<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_alert_dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textColor="#313131"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/message_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:singleLine="false"
            android:textColor="#666666"
            android:textSize="14sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:visibility="gone">

            <Button
                android:id="@+id/negative_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/my_alert_dialog_btn_selector"
                android:gravity="center"
                android:minWidth="80dp"
                android:textColor="@color/c_999999"
                android:textSize="14sp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/positive_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/my_alert_dialog_btn_selector"
                android:gravity="center"
                android:minWidth="80dp"
                android:textColor="@color/c_ffaa33"
                android:textSize="14sp"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:textColor="#999999"
            android:textSize="13dp"
            android:visibility="gone"/>
        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1px"
            android:visibility="gone"
            android:background="@color/c_e8e8e8"/>


        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#e8e8e8"
            android:dividerHeight="@dimen/size_1px"
            android:listSelector="@android:color/transparent"
            android:visibility="gone"/>
    </LinearLayout>

</FrameLayout>
